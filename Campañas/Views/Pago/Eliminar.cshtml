@model PagoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Eliminar metodo de pago</h3>
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Pago" method="post">
            <input asp-for="idPago" type="hidden" class="form-control">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="nombre" type="text" class="form-control" aria-label="Disabled input example" disabled>
                <span asp-validation-for="nombre" class="text-danger"></span>
            <div class="alert alert-danger" role="alert">
                ¿Seguro que deseas eliminar el metodo de pago: @Html.DisplayTextFor(m=>m.nombre)?
            </div>
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash3"></i>  Eliminar</button>
        </form>
    </div>
</div>

