@model List<PagoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
    Aqui, el administrador al igual que el super usuario podrá crear, modificar o eliminar los metodos de pago
    El empleado solo podrá agregar o editar 
*@
<div class="card">
    <div class="card-header">
        <h3>Metodos de pago</h3>
    </div>
    @if (User.IsInRole("Administrador"))
    {    
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Pago" class="btn btn-success"><i class="bi bi-plus-circle"></i> Registrar nuevo metodo de pago</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!--Usamos el foreach para poder integrar todos los datos del modelo  -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idPago</td>
                        <td>@item.nombre</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Pago" class="btn btn-warning" asp-route-id="@item.idPago"><i class="bi bi-pencil"></i> Editar</a>
                            <a asp-action="Eliminar" asp-controller="Pago" class="btn btn-danger" asp-route-id="@item.idPago"><i class="bi bi-trash3"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    }
    @if (User.IsInRole("Empleado"))
    {
        <div class="card-body">
            <a asp-action="Guardar" asp-controller="Pago" class="btn btn-success"><i class="bi bi-plus-circle"></i> Registrar nuevo metodo de pago</a>
            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <!--Usamos el foreach para poder integrar todos los datos del modelo  -->
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.idPago</td>
                            <td>@item.nombre</td>
                            <td>
                                <a asp-action="Editar" asp-controller="Pago" class="btn btn-warning" asp-route-id="@item.idPago"><i class="bi bi-pencil"></i> Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</div>

